export map -proj plan -fmt kml -o "output/DA14 Mill Creek Cave KML.kml"

export map -projection plan -layout default -o "output/DA14 Mill Creek Cave Plan.pdf"
export map -projection plan -layout default -o "output/DA14 Mill Creek Cave Plan Plan.svg"
export atlas -projection plan -layout default -o "output/DA14 Mill Creek Cave Plan Atlas.pdf"

